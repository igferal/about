---
// This will be enhanced with proper layout and components in upcoming steps
import '../styles/globals.css';
import Layout from '@/layouts/Layout.astro';
---

<Layout 
	title="Developer Portfolio - Coming Soon" 
	description="Developer portfolio and blog - launching soon"
>
	<div class="min-h-screen flex items-center justify-center">
		<div class="text-center px-4">
			<h1 class="text-4xl font-bold text-foreground mb-4">
				Portfolio Coming Soon
			</h1>
			<p class="text-lg text-muted-foreground max-w-md mx-auto">
				Building something amazing with Astro, React, and Tailwind CSS
			</p>
			<div class="mt-8">
				<a 
					href="/about/test-components" 
					class="inline-flex items-center px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors"
				>
					View Components Test
				</a>
			</div>
		</div>
	</div>
</Layout>
