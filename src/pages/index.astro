---
// This will be enhanced with proper layout and components in upcoming steps
import "../styles/globals.css";
import Layout from "../layouts/Layout.astro";
import { AnimatedName } from "../components/AnimatedName";
import { RandomBoxes } from "../components/RandomBoxes";
import { Timeline } from "../components/Timeline";
import { SocialLinks } from "../components/SocialLinks";
---

<Layout
  title="Ignacio Fernández Álvarez - Fullstack Developer"
  description="Fullstack Developer specializing in modern web technologies, React, TypeScript, and cloud platforms"
>
  <!-- Full Background Animation -->
  <RandomBoxes client:load />

  <!-- Mobile-Responsive Layout -->
  <div class="min-h-screen flex flex-col relative z-10 p-4 sm:p-6 safe-area-inset">
    <!-- Top Section with Name - More flexible height on mobile -->
    <div class="flex-none min-h-[25vh] sm:h-1/3 flex items-center justify-center sm:justify-start">
      <div class="flex flex-col justify-center text-center sm:text-left sm:ml-36 px-4 sm:px-0">
        <AnimatedName client:load />
        <p class="text-lg sm:text-xl md:text-2xl lg:text-5xl text-muted-foreground font-normal mt-2 sm:mt-4 leading-tight">
          Ignacio Fernández Álvarez<br />Fullstack Developer
        </p>
      </div>
    </div>

    <!-- Middle Section - Timeline Centered - More space on mobile -->
    <div class="flex-none min-h-[45vh] sm:h-1/3 flex items-center justify-center px-2 sm:px-0">
      <div class="w-full max-w-full sm:max-w-none">
        <Timeline client:load />
      </div>
    </div>

    <!-- Bottom Section with Social Links and Blog - Stack on mobile -->
    <div class="flex-1 min-h-[20vh] flex flex-col sm:flex-row items-center sm:items-end justify-between gap-4 sm:gap-0 pb-4 sm:pb-0">
      <div class="relative z-10 backdrop-blur-sm rounded-2xl p-4 sm:p-6 order-2 sm:order-1">
        <SocialLinks client:load />
      </div>
      
      <!-- Blog Link -->
      <div class="relative z-10 bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm rounded-2xl p-4 sm:p-6 shadow-lg border border-gray-200 dark:border-gray-700 order-1 sm:order-2">
        <a
          href="/blog"
          class="group flex items-center space-x-2 text-base sm:text-lg md:text-xl font-medium text-[#2A4494] hover:text-[#1e3a8a] transition-all duration-300"
        >
          <span>Read my blog</span>
          <svg
            class="w-4 h-4 sm:w-5 sm:h-5 transform group-hover:translate-x-1 transition-transform duration-300"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              fill-rule="evenodd"
              d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
              clip-rule="evenodd"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <style>
    .letter-spacing-wide {
      letter-spacing: 0.2em;
    }
    
    /* Ensure safe areas on mobile devices */
    .safe-area-inset {
      padding-top: env(safe-area-inset-top);
      padding-bottom: env(safe-area-inset-bottom);
      padding-left: env(safe-area-inset-left);
      padding-right: env(safe-area-inset-right);
    }
  </style>
</Layout>
