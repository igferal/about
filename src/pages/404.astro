---
import Layout from '../layouts/Layout.astro';
import { Button } from '../components/ui/button';
---

<Layout 
  title="Page Not Found - 404" 
  description="The page you're looking for doesn't exist. Navigate back to the homepage or explore our blog."
>
  <main class="min-h-screen flex items-center justify-center bg-gray-50 dark:bg-gray-900">
    <div class="text-center px-4 max-w-2xl mx-auto">
      <!-- 404 Illustration -->
      <div class="mb-8">
        <div class="w-32 h-32 mx-auto mb-6 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center">
          <svg 
            class="w-16 h-16 text-blue-600 dark:text-blue-400" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.34 0-4.462.93-6.017 2.448C7.5 19.636 9.626 21 12.262 21 16.72 21 21 16.663 21 12S16.663 3 12 3s-9 4.037-9 9c0 .393.025.783.073 1.164"
            />
          </svg>
        </div>
        
        <h1 class="text-6xl md:text-8xl font-bold text-gray-900 dark:text-white mb-4">
          404
        </h1>
      </div>

      <!-- Error Message -->
      <div class="mb-8">
        <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 dark:text-white mb-4">
          Page Not Found
        </h2>
        
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
          Oops! The page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL.
        </p>
      </div>

      <!-- Navigation Options -->
      <div class="space-y-4 sm:space-y-0 sm:space-x-4 sm:flex sm:justify-center">
        <Button 
          className="w-full sm:w-auto px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
          asChild
        >
          <a 
            href="/"
            class="inline-flex items-center justify-center gap-2"
            aria-label="Go to homepage"
          >
            <svg 
              class="w-4 h-4" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            Go Home
          </a>
        </Button>

        <Button 
          variant="outline"
          className="w-full sm:w-auto px-8 py-3 border-2 border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white font-medium rounded-lg transition-colors focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
          asChild
        >
          <a 
            href="/blog"
            class="inline-flex items-center justify-center gap-2"
            aria-label="Visit blog"
          >
            <svg 
              class="w-4 h-4" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9m1.5-2-1.5 1.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Browse Blog
          </a>
        </Button>
      </div>

      <!-- Back Navigation -->
      <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
        <button 
          onclick="history.back()"
          class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded-md px-2 py-1"
          aria-label="Go back to previous page"
        >
          ‚Üê Go back to previous page
        </button>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Respect motion preferences */
  @media (prefers-reduced-motion: reduce) {
    * {
      transition: none !important;
      animation: none !important;
    }
  }
</style> 