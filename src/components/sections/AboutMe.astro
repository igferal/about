---
// About Me section with new layout: left side content, right side timeline
import { Badge } from '../ui/badge';
import { Button } from '../ui/button';

// Skills data organized by category
const skillCategories = [
  {
    name: "Languages",
    skills: ["JavaScript", "TypeScript", "Python", "HTML5", "CSS3", "SQL", "Bash"]
  },
  {
    name: "Frameworks & Libraries",
    skills: ["React", "Astro", "Next.js", "Vue.js", "Node.js", "Express", "Tailwind CSS", "React Query"]
  },
  {
    name: "Tools & Platforms",
    skills: ["Git", "GitHub", "VS Code", "Figma", "Postman", "Chrome DevTools", "npm/yarn"]
  },
  {
    name: "Cloud & DevOps",
    skills: ["AWS", "Vercel", "Netlify", "GitHub Actions", "Docker", "Firebase"]
  }
];
---

<section id="about" class="py-16 bg-white dark:bg-gray-900" aria-labelledby="about-heading">
  <div class="container mx-auto px-4">
    <div class="max-w-7xl mx-auto">
      <!-- Two column layout -->
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
        
        <!-- Left Column: About Me, Technologies, Contact -->
        <div class="space-y-16">
          
          <!-- About Me Section -->
          <section aria-labelledby="about-heading">
            <h2 id="about-heading" class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">
              About Me
            </h2>
            
            <div class="space-y-4 text-gray-600 dark:text-gray-300">
              <p class="text-lg leading-relaxed">
                I'm a passionate full-stack developer with a love for creating exceptional digital experiences. My journey began with curiosity about how websites work, and it has evolved into a deep appreciation for clean code, user-centered design, and innovative solutions.
              </p>
              
              <p class="leading-relaxed">
                With expertise spanning front-end frameworks like React and Astro, to back-end technologies like Node.js and cloud platforms, I enjoy the full spectrum of web development. I believe in writing maintainable code, following best practices, and continuously learning new technologies.
              </p>
              
              <p class="leading-relaxed">
                When I'm not coding, you can find me exploring new technologies, contributing to open source projects, or sharing knowledge through technical writing and mentoring.
              </p>
            </div>
          </section>

          <!-- Technologies Section -->
          <section aria-labelledby="technologies-heading">
            <h3 id="technologies-heading" class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-6">
              Technologies & Skills
            </h3>
            
            <div class="space-y-6">
              {skillCategories.map((category) => (
                <div>
                  <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
                    {category.name}
                  </h4>
                  
                  <div class="flex flex-wrap gap-2" role="list" aria-label={`${category.name} skills`}>
                    {category.skills.map((skill) => (
                      <div role="listitem">
                        <Badge
                          variant="secondary"
                          className="px-3 py-1 text-sm font-medium hover:bg-blue-100 hover:text-blue-700 dark:hover:bg-blue-900 dark:hover:text-blue-300 transition-colors cursor-default focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 min-h-[32px]"
                          role="button"
                          aria-label={`Skill: ${skill}`}
                        >
                          {skill}
                        </Badge>
                      </div>
                    ))}
                  </div>
                </div>
              ))}
            </div>
            
            <p class="text-gray-600 dark:text-gray-400 text-sm mt-6">
              Always exploring new technologies and staying current with industry trends.
            </p>
          </section>

          <!-- Contact Section -->
          <section aria-labelledby="contact-heading">
            <h3 id="contact-heading" class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-6">
              Let's Connect
            </h3>
            
            <p class="text-gray-600 dark:text-gray-300 mb-6">
              Ready to collaborate on your next project or discuss opportunities? I'd love to hear from you.
            </p>

            <!-- Contact buttons -->
            <div class="flex flex-col sm:flex-row gap-3" role="group" aria-label="Contact methods">
              <!-- Email -->
              <Button 
                className="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 min-h-[44px]"
                asChild
              >
                <a 
                  href="mailto:contact@example.com"
                  class="inline-flex items-center gap-2 justify-center"
                  aria-label="Send email to contact@example.com"
                >
                  <svg 
                    class="w-4 h-4" 
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  Email Me
                </a>
              </Button>

              <!-- LinkedIn -->
              <Button 
                variant="outline"
                className="px-6 py-2 border-2 border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white font-medium rounded-lg transition-colors focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 min-h-[44px]"
                asChild
              >
                <a 
                  href="https://linkedin.com/in/yourprofile"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 justify-center"
                  aria-label="Visit LinkedIn profile (opens in new window)"
                >
                  <svg 
                    class="w-4 h-4" 
                    fill="currentColor" 
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                  LinkedIn
                </a>
              </Button>

              <!-- GitHub -->
              <Button 
                variant="outline"
                className="px-6 py-2 border-2 border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white dark:border-gray-400 dark:text-gray-400 dark:hover:bg-gray-400 dark:hover:text-gray-900 font-medium rounded-lg transition-colors focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 min-h-[44px]"
                asChild
              >
                <a 
                  href="https://github.com/yourusername"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 justify-center"
                  aria-label="Visit GitHub profile (opens in new window)"
                >
                  <svg 
                    class="w-4 h-4" 
                    fill="currentColor" 
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  GitHub
                </a>
              </Button>
            </div>

            <!-- Additional contact info -->
            <div class="mt-6 p-4 bg-gray-50 dark:bg-gray-800 rounded-lg">
              <p class="text-gray-600 dark:text-gray-300 text-sm mb-1">
                <strong>Availability:</strong> Open to new opportunities and interesting projects
              </p>
              <p class="text-gray-600 dark:text-gray-300 text-sm">
                <strong>Response time:</strong> Usually within 24 hours
              </p>
            </div>
          </section>
        </div>

        <!-- Right Column: Timeline -->
        <div class="lg:pl-8">
          <section aria-labelledby="journey-heading">
            <h3 id="journey-heading" class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center lg:text-left">
              My Journey
            </h3>
            
            <!-- Timeline -->
            <div class="relative" role="list" aria-label="Career timeline">
              <!-- Timeline line -->
              <div class="absolute left-8 top-0 bottom-0 w-0.5 bg-blue-500 dark:bg-blue-400" aria-hidden="true"></div>
              
              <!-- Timeline items -->
              <div class="space-y-8">
                <!-- Milestone 1: Started Programming -->
                <div class="relative flex items-start" role="listitem">
                  <div 
                    class="flex-shrink-0 w-16 h-16 bg-blue-500 dark:bg-blue-400 rounded-full flex items-center justify-center text-white font-bold text-lg z-10"
                    aria-label="Timeline milestone 1"
                  >
                    1
                  </div>
                  <div class="ml-6">
                    <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 shadow-md focus-within:ring-2 focus-within:ring-blue-500">
                      <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                        First Line of Code
                      </h4>
                      <p class="text-gray-600 dark:text-gray-300 text-sm mb-2">
                        Started my programming journey with Python, fascinated by the power of automation and problem-solving through code.
                      </p>
                      <time 
                        class="text-xs text-blue-600 dark:text-blue-400 font-medium"
                        datetime="2018"
                        aria-label="Year 2018"
                      >
                        2018
                      </time>
                    </div>
                  </div>
                </div>

                <!-- Milestone 2: First Web Development Project -->
                <div class="relative flex items-start" role="listitem">
                  <div 
                    class="flex-shrink-0 w-16 h-16 bg-blue-500 dark:bg-blue-400 rounded-full flex items-center justify-center text-white font-bold text-lg z-10"
                    aria-label="Timeline milestone 2"
                  >
                    2
                  </div>
                  <div class="ml-6">
                    <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 shadow-md focus-within:ring-2 focus-within:ring-blue-500">
                      <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                        Web Development Discovery
                      </h4>
                      <p class="text-gray-600 dark:text-gray-300 text-sm mb-2">
                        Built my first website using HTML, CSS, and JavaScript. Fell in love with creating interactive user experiences.
                      </p>
                      <time 
                        class="text-xs text-blue-600 dark:text-blue-400 font-medium"
                        datetime="2019"
                        aria-label="Year 2019"
                      >
                        2019
                      </time>
                    </div>
                  </div>
                </div>

                <!-- Milestone 3: Framework Mastery -->
                <div class="relative flex items-start" role="listitem">
                  <div 
                    class="flex-shrink-0 w-16 h-16 bg-blue-500 dark:bg-blue-400 rounded-full flex items-center justify-center text-white font-bold text-lg z-10"
                    aria-label="Timeline milestone 3"
                  >
                    3
                  </div>
                  <div class="ml-6">
                    <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 shadow-md focus-within:ring-2 focus-within:ring-blue-500">
                      <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                        Framework Mastery
                      </h4>
                      <p class="text-gray-600 dark:text-gray-300 text-sm mb-2">
                        Dived deep into React and Node.js, building complex applications and understanding modern development patterns.
                      </p>
                      <time 
                        class="text-xs text-blue-600 dark:text-blue-400 font-medium"
                        datetime="2020"
                        aria-label="Years 2020 to 2021"
                      >
                        2020-2021
                      </time>
                    </div>
                  </div>
                </div>

                <!-- Milestone 4: Professional Development -->
                <div class="relative flex items-start" role="listitem">
                  <div 
                    class="flex-shrink-0 w-16 h-16 bg-blue-500 dark:bg-blue-400 rounded-full flex items-center justify-center text-white font-bold text-lg z-10"
                    aria-label="Timeline milestone 4"
                  >
                    4
                  </div>
                  <div class="ml-6">
                    <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 shadow-md focus-within:ring-2 focus-within:ring-blue-500">
                      <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                        Professional Growth
                      </h4>
                      <p class="text-gray-600 dark:text-gray-300 text-sm mb-2">
                        Joined a development team, learned about scalable architectures, CI/CD, and collaborative development practices.
                      </p>
                      <time 
                        class="text-xs text-blue-600 dark:text-blue-400 font-medium"
                        datetime="2022"
                        aria-label="Years 2022 to 2023"
                      >
                        2022-2023
                      </time>
                    </div>
                  </div>
                </div>

                <!-- Milestone 5: Modern Technologies -->
                <div class="relative flex items-start" role="listitem">
                  <div 
                    class="flex-shrink-0 w-16 h-16 bg-blue-500 dark:bg-blue-400 rounded-full flex items-center justify-center text-white font-bold text-lg z-10"
                    aria-label="Timeline milestone 5"
                  >
                    5
                  </div>
                  <div class="ml-6">
                    <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 shadow-md focus-within:ring-2 focus-within:ring-blue-500">
                      <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                        Embracing Innovation
                      </h4>
                      <p class="text-gray-600 dark:text-gray-300 text-sm mb-2">
                        Exploring cutting-edge technologies like Astro, TypeScript, and modern deployment strategies to build faster, better web experiences.
                      </p>
                      <time 
                        class="text-xs text-blue-600 dark:text-blue-400 font-medium"
                        datetime="2024"
                        aria-label="Year 2024 to present"
                      >
                        2024 - Present
                      </time>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>

  <style>
    /* Ensure adequate touch targets for mobile */
    @media (max-width: 768px) {
      .min-h-\[44px\] {
        min-height: 44px;
      }
      
      .min-h-\[32px\] {
        min-height: 32px;
      }
    }

    /* Respect motion preferences */
    @media (prefers-reduced-motion: reduce) {
      * {
        transition: none !important;
        animation: none !important;
      }
    }

    /* Improve focus visibility */
    .focus\:ring-2:focus {
      box-shadow: 0 0 0 2px var(--tw-ring-color);
    }

    /* Better spacing for timeline on small screens */
    @media (max-width: 640px) {
      .timeline-item .ml-6 {
        margin-left: 1rem;
      }
      
      .timeline-item .w-16 {
        width: 3rem;
        height: 3rem;
      }
      
      .timeline-item .left-8 {
        left: 1.5rem;
      }
    }
  </style>
</section> 